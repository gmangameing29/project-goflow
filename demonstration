class Simulation:
    def __init__(self):
        self.day = 0
        self.food_delivered = 0
        self.hunger_zones = random.randint(1, 3)

    def next_day(self):
        self.day += 1
        print(f"\nğŸŒ… Day {self.day} Simulation Report:")
        soil = random.randint(40, 80)
        light = random.randint(50, 100)
        crops = 1 if soil > 50 and light > 60 else 0
        print(f"  ğŸŒ¾ Soil Moisture: {soil}%, Light Level: {light}%")
        print(f"  ğŸŒ½ Crops Grown Today: {crops}")

        if crops:
            self.food_delivered += crops
            print(f"  ğŸšš Food sent to {self.hunger_zones} hunger zones")
            print(f"  âœˆï¸  Chatdoggo deployed drones!")
        else:
            print("  âš ï¸ No crops today â€” drought risk.")

        print(f"  ğŸ“¦ Total Meals Delivered: {self.food_delivered}")

sim = Simulation()
for _ in range(5):
    sim.next_day()
    time.sleep(2)

print("\nâœ… Simulation Complete â€” GrowFlow proves the power of tech + care.")
print("ğŸŒ Letâ€™s build a world where no one goes hungry.")
